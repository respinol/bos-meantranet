extends ../layout

block script
    script(src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.6/handlebars.min.js")

block content
  .container(style='padding-top:70px;')
    .container-fluid
      .page-header
        h3 Admin Page
      .row.well
        .col-xs-1
        .col-xs-10
          form.form-horizontal(action='/admin/users', method='POST')
            .row
              ul
                for user in users
                  input(type='hidden', name='_csrf', value=_csrf)
                  .form-group
                    label.control-label(for='name') Name:
                    input#name.input-design.form-control(type='text', name='name', value=user.profile.name)
                    label.control-label(for='email') Email:
                    input#email.input-design.form-control(type='text', name='email', value=user.email)
                    label.control-label(for='userlevel') User Level:
                    input#userlevel.input-design.form-control(type='text', list='userlevels', name='userlevel', value=user.profile.userlevel)
                    datalist#userlevels
                      option Admin
                      option Employee
                      option Intern
                    label.control-label(for='department') Department:
                    input#department.input-design.form-control(type='text', list='departments', name='department', value=user.profile.department)
                    datalist#departments
                      option I.T.
                      option Human Resources
                      option Finance
                      option Operations
                      option Intern
                    label.control-label(for='jobtitle') Job Title:
                    input#jobtitle.input-design.form-control(type='text', list='jobtitles', name='jobtitle', value=user.profile.jobtitle)
                    datalist#jobtitles
                      option I.T. Administrator
                      option Management
                      option Team Leader
                      option Agent
                      option Intern
                    .row(style='padding-bottom:30px;')
                      .page-header
            .row
              .col-xs-4
              .col-xs-4
                button.btn.btn.btn-primary.center-block(type='submit')
                  i.fa.fa-pencil
                  | Update Profiles
        .col-xs-1
